@import '../user/user.wxss';
.weui-cell__bd text{color:#999;float:right}
.wd-pic{height:125rpx;background:#fff;margin:20rpx 0;margin-bottom:0rpx}
.wd-pic text{margin-top:45rpx;color:#333;float:left}
.wd-pic image.pic{width:100rpx;height:100rpx;border-radius:50%;float:right;margin-top:20rpx;margin-right:30rpx}
.wd-pic .weui-img image{margin-top:15rpx}
.page_bd .weui-cell{margin-left:0}
.showHide{background:rgba(0,0,0,0.3);height:100%;width:100%;position:fixed;top:0;bottom:0;z-index:1000}
.sh-cont{height:auto;width:96%;position:fixed;z-index:2;left:2%;bottom:20rpx}
.sh-cont view{height:100rpx;line-height:100rpx;background:#fff;border-bottom:2rpx solid #F2F2F2;text-align:center;font-size:30rpx}
.sh-cont view:nth-child(1){border-top-left-radius:10rpx;border-top-right-radius:10rpx}
.sh-cont view:nth-child(4){border-bottom-left-radius:10rpx;border-bottom-right-radius:10rpx}
.sh-cont view:last-child{margin-top:10rpx;border-radius:10rpx}
.sh-cont view.sh-title{color:#999;font-size:28rpx}